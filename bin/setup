#!/bin/bash -eu

source /etc/jelastic/environment;

/sbin/iptables -t nat -I PREROUTING -p tcp -m tcp --dport 4949 -j REDIRECT --to-ports 9990
/sbin/iptables -t nat -I PREROUTING -p tcp -m tcp --dport 4848 -j REDIRECT --to-ports 9993
service iptables save

sed -i 's/_setPassword > \/dev\/null 2>\&1; local res=$?;/_setPassword 2>\&1; local res=$?;/' /usr/lib/jelastic/modules/passwd.module

mkdir -p ${OPENSHIFT_JBOSSAS_DIR}/versions/7.2/{template,standalone/tmp,standalone/configuration,standalone/log,standalone/data,standalone/data/content,standalone/data/messagingbindings,standalone/data/messagingjournal,standalone/data/messaginglargemessages,standalone/data/tx-object-store,standalone/data/timer-service-data,standalone/deployments}

sed -i 's/opt\/repo:\/bin\/bash/opt\/repo\/home:\/bin\/bash/g' "/etc/passwd"

[ -f ${OPENSHIFT_HOMEDIR}/.jboss-cli-history ] || touch ${OPENSHIFT_HOMEDIR}/.jboss-cli-history

if [ -d "/opt/repo/.ssh" ] ; then
    mv /opt/repo/.ssh /opt/repo/home/
fi

[ -f "/opt/repo/.bash_profile" ] && cp /opt/repo/.bash_profile /opt/repo/home/
